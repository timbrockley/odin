{
	"$schema": "https://raw.githubusercontent.com/DanielGavin/ols/master/misc/ols.schema.json",
	"collections": [
		{ "name": "custom_collection", "path": "/wwwdev/odin" }
	],
	"enable_semantic_tokens": false,
	"enable_document_symbols": true,
	"enable_format": true,
	"enable_hover": true,
	"enable_snippets": true,
	"profile": "default",
	"profiles": [
		{ "name": "default", "checker_path": ["."]},
		{ "name": "linux_profile", "os": "linux", "checker_path": ["."]},
		{ "name": "windows_profile", "os": "windows", "checker_path": ["."]}
	]
}
